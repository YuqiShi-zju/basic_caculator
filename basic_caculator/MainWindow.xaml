<Window x:Class="basic_caculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:basic_caculator"
        mc:Ignorable="d"
        Title="Basic Calculator" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions> <!--这一步是为了创建一个网格布局-->
            <RowDefinition Height="1.5*"/> <!-- 第一行用于显示输入和结果 -->
            <RowDefinition Height="4*"/><!-- 第二行用于按钮布局 -->

        </Grid.RowDefinitions>

        <TextBox x:Name="DisplayTextBox" Grid.Row="0" 
                 FontSize="40" TextAlignment="Right" 
                 VerticalContentAlignment="Center" Margin="10"
                 IsReadOnly="True" Text="0"/>
        
        <Grid Grid.Row="1">
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="FontSize" Value="24"/>
                </Style>
            </Grid.Resources>
            
            <!-- 创建一个网格布局来放置按钮 -->
            <Grid.RowDefinitions>
                <RowDefinition/>
                <!-- 第一行按钮 -->
                <RowDefinition/>
                <!-- 第二行按钮 -->
                <RowDefinition/>
                <!-- 第三行按钮 -->
                <RowDefinition/>
                <!-- 第四行按钮 -->
                <RowDefinition/>
                <!-- 第五行按钮 这种表示随内容自适应 -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- 这种表示所有都是等宽的 -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" Content="CE" Margin="5"/>
            <Button Grid.Row="0" Grid.Column="1" Content="C" Margin="5"/>
            <Button Grid.Row="0" Grid.Column="2" Content="←" Margin="5"/>
            <Button Grid.Row="0" Grid.Column="3" Content="/" Margin="5"/>

            <Button Grid.Row="1" Grid.Column="0" Content="7" Margin="5"/>
            <Button Grid.Row="1" Grid.Column="1" Content="8" Margin="5"/>
            <Button Grid.Row="1" Grid.Column="2" Content="9" Margin="5"/>
            <Button Grid.Row="1" Grid.Column="3" Content="*" Margin="5"/>

            <Button Grid.Row="2" Grid.Column="0" Content="4" Margin="5"/>
            <Button Grid.Row="2" Grid.Column="1" Content="5" Margin="5"/>
            <Button Grid.Row="2" Grid.Column="2" Content="6" Margin="5"/>
            <Button Grid.Row="2" Grid.Column="3" Content="-" Margin="5"/>

            <Button Grid.Row="3" Grid.Column="0" Content="1" Margin="5"/>
            <Button Grid.Row="3" Grid.Column="1" Content="2" Margin="5"/>
            <Button Grid.Row="3" Grid.Column="2" Content="3" Margin="5"/>
            <Button Grid.Row="3" Grid.Column="3" Content="+" Margin="5"/>

            <Button Grid.Row="4" Grid.Column="0" Content="0" Margin="5"/>
            <Button Grid.Row="4" Grid.Column="1" Content="." Margin="5"/>
            <Button Grid.Row="4" Grid.Column="2" Content="=" Margin="5"/>
        </Grid>
    </Grid>
</Window>
